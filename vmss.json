{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2023-04-01",
      "name": "eth1-nsg",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowInternalSubnet",
            "properties": {
              "protocol": "*",
              "sourceAddressPrefix": "10.9.255.0/24",
              "destinationAddressPrefix": "10.9.255.0/24",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
          {
            "name": "AllowInternalSubnetOutbound",
            "properties": {
              "protocol": "*",
              "sourceAddressPrefix": "10.9.255.0/24",
              "destinationAddressPrefix": "10.9.255.0/24",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Outbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachineScaleSets",
      "apiVersion": "2023-03-01",
      "name": "BYVMSS2",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', 'eth1-nsg')]"
      ],
      "sku": {
        "name": "Standard_D4s_v4",
        "tier": "Standard",
        "capacity": 1
      },
      "properties": {
        "orchestrationMode": "Uniform",
        "platformFaultDomainCount": 1,
        "upgradePolicy": {
          "mode": "Manual"
        },
        "virtualMachineProfile": {
          "storageProfile": {
            "imageReference": {
              "publisher": "Canonical",
              "offer": "0001-com-ubuntu-server-jammy",
              "sku": "22_04-lts-gen2",
              "version": "latest"
            },
            "osDisk": {
              "createOption": "FromImage"
            }
          },
          "osProfile": {
            "computerNamePrefix": "myvm2",
            "adminUsername": "azureuser",
            "adminPassword": "Password123!"
          },
          "networkProfile": {
            "networkInterfaceConfigurations": [
              {
                "name": "nic1",
                "properties": {
                  "primary": true,
                  "enableAcceleratedNetworking": false,
                  "ipConfigurations": [
                    {
                      "name": "ipconfig1",
                      "properties": {
                        "subnet": {
                          "id": "/subscriptions/9b8218f9-902a-4d20-a65c-e98acec5362f/resourceGroups/ciliumDRA13/providers/Microsoft.Network/virtualNetworks/ciliumDRA13/subnets/nodenet"
                        },
                        "publicipaddressconfiguration": {
                            "name": "pub1",
                            "properties": {
                            "idleTimeoutInMinutes": 15
                            }
                        }
                      }
                    }
                  ]
                }
              },
              {
                "name": "nic2",
                "properties": {
                  "primary": false,
                  "enableAcceleratedNetworking": true,
                  "enableIPForwarding": true,
                  "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'eth1-nsg')]"
                  },
                  "ipConfigurations": [
                    {
                      "name": "ipconfig2",
                      "properties": {
                        "subnet": {
                          "id": "/subscriptions/9b8218f9-902a-4d20-a65c-e98acec5362f/resourceGroups/ciliumDRA13/providers/Microsoft.Network/virtualNetworks/ciliumDRA13/subnets/nodenet2"
                        }
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    }
  ]
}